@{
    ViewData["Title"] = "Agregar Amigo";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h3 class="text-center">Agregar Amigo</h3>

                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-success mt-3">@ViewBag.Message</div>
                    }
                    else if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }

                    @using (Html.BeginForm("AgregarAmigo", "Amigo", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="nombreUsuario">Nombre de Usuario</label>
                            <input type="text" class="form-control" id="nombreUsuario" name="nombreUsuario" required />
                        </div>
                        <div class="d-flex justify-content-center mt-3">
                            <button type="submit" class="btn btn-primary">Agregar Amigo</button>
                            <a asp-controller="Amigo" asp-action="Index" class="btn btn-secondary mx-2">Volver atrás</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>