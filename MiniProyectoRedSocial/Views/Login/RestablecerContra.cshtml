@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h3 class="text-center">Restablecer Contraseña</h3>
                    <form asp-action="RestablecerContra" method="post">
                        <div class="form-group">
                            <label for="nombreUsuario">Nombre de Usuario</label>
                            <input type="text" class="form-control" id="nombreUsuario" name="nombreUsuario" required />
                        </div>
                        <div class="d-flex justify-content-center mt-3">
                            <button type="submit" name="action" value="generate" class="btn btn-primary mx-2">Generar nueva contraseña</button>
                            <a asp-controller="Login" asp-action="Index" class="btn btn-secondary mx-2">Volver atrás</a>
                        </div>
                    </form>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success mt-3">@ViewBag.Message</div>
                    }
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
</div>