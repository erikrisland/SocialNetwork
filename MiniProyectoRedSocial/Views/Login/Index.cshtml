@using MiniProyectoRedSocial.Core.Application.ViewModels.Usuarios;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row nt-5">
        <div class="col-6 offset-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (TempData["ErrorMensaje"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMensaje"]
                        </div>
                    }

                    <h3 class="text-center">Iniciar sesión</h3>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <form method="post" asp-controller="Login" asp-action="Index">
                        <div class="mb-3">
                            <label asp-for="NombreUsuario" class="form-label">Nombre de usuario: </label>
                            <input class="form-control" asp-for="NombreUsuario" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Contraseña" class="form-label">Contraseña: </label>
                            <input class="form-control" asp-for="Contraseña" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary mb-3">Iniciar sesión</button>
                            <p class="text-center">¿Olvidaste tu contraseña? <a asp-controller="Login" asp-action="RestablecerContra">Restablecer aquí</a></p>
                            <p class="mt-3">¿No tienes cuenta aún? <a asp-controller="Login" asp-action="Registro">Regístrate aquí</a></p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>