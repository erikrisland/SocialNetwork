@model MiniProyectoRedSocial.Core.Application.ViewModels.Publicaciones.SavePublicacionViewModel

@{
    bool editMode = Model.Id != 0;
    ViewData["Title"] = editMode ? "Editar publicacion" : "Crear publicacion";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-primary text-light">
                    <h4>@(editMode ? "Editando publicacion" : "Creando una nueva publicación")</h4>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="@(editMode ? "Edit" : "Create")">
                        <div class="mb-3">
                            <label asp-for="Contenido" class="form-label">Descripción: </label>
                            <input type="text" asp-for="Contenido" class="form-control" />
                            <span asp-validation-for="Contenido" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="File" class="form-label">Imagen: </label>
                            <input type="file" asp-for="File" class="form-control" />
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="VideoUrl" class="form-label">Video URL: </label>
                            <input type="text" asp-for="VideoUrl" class="form-control" />
                            <span asp-validation-for="VideoUrl" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UsuarioId" />
                        <input type="hidden" asp-for="FechaHora" />

                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver atrás</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>