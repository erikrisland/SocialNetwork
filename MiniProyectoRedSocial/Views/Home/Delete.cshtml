@model MiniProyectoRedSocial.Core.Application.ViewModels.Publicaciones.SavePublicacionViewModel
@{
    ViewData["Title"] = "Eliminar publicación";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-primary text-light">
                <h4>¿Está seguro que desea eliminar la publicación?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Home" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">Aceptar</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

